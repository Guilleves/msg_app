<h1>Leave a Message</h1>

<%= form_for :message, url: messages_path do |f| %>
  <p>
    <%= f.label :from %><br>
    <%= f.text_field :from %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p><%= link_to 'Back', messages_path %></p>
